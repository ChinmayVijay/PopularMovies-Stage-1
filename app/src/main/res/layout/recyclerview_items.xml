<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="7dp"
    app:contentPadding="7dp"
    app:cardCornerRadius="7dp"
    app:cardMaxElevation="7dp"
    android:layout_gravity="center"
    android:layout_margin="7dp"
    app:cardBackgroundColor="@color/viewBg"
    >
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/iv_movieImage"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:focusable="true"
            android:layout_margin="5dp"
            android:contentDescription="@string/txt_movie_poster"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_movieTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/album_title"
                android:text="@string/txt_sample"
                android:textStyle="bold"
                android:gravity="center_vertical|center"
                android:layout_margin="5dp"
                android:layout_weight="2"/>

            <ImageView
                android:id="@+id/iv_trailer_share"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_share_trailer"
                android:contentDescription="@string/sharetrailer" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>