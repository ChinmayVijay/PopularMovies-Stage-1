<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".DetailsActivity"
    android:padding="8dp"
    android:columnCount="2"
    >

    <ImageView
        android:id="@+id/iv_poster"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="2"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/tv_movie_title"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:text="Title"/>
    <TextView
        android:id="@+id/tv_movie_title_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Avengers Infinity Wars"
        android:gravity="center_vertical"
        android:layout_gravity="fill_horizontal|center_vertical"
        />
    <TextView
        android:id="@+id/tv_movie_overview"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:text="Overview"/>
    <TextView
        android:id="@+id/tv_movie_overview_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Avengers Infinity Wars"
        android:gravity="center_vertical"
        android:layout_gravity="fill_horizontal|center_vertical"
        />
    <TextView
        android:id="@+id/tv_movie_user_rating"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:text="User Rating"/>
    <TextView
        android:id="@+id/tv_movie_user_rating_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Avengers Infinity Wars"
        android:gravity="center_vertical"
        android:layout_gravity="fill_horizontal|center_vertical"
        />
    <TextView
        android:id="@+id/tv_movie_release_date"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:text="Release Date"/>
    <TextView
        android:id="@+id/tv_movie_release_date_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Avengers Infinity Wars"
        android:gravity="center_vertical"
        android:layout_gravity="fill_horizontal|center_vertical"
        />

</GridLayout>